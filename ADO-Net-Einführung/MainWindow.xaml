<Window x:Class="ADO_Net_Einführung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO_Net_Einführung"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Content="Ausgabe:"></Label>
        <TextBox IsEnabled="False" Grid.Column="1" AcceptsReturn="True" Name="output" FontFamily="Consolas"></TextBox>
        <Button Name="btnAbfrage" Content="Abfrage" Grid.Row="2" Click="btnAbfrage_Click"/>
        <TextBox Name="txbQuery" Grid.Row="1" Grid.Column="1"></TextBox>
    </Grid>
</Window>
